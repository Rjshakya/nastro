{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "lib": ["ESNext"],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "paths": {
      "@/*": ["./src/*"]
    },
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "types": ["./worker-configuration.d.ts", "@types/node"]
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "dist", // Stop TSC from looking inside the output folder
    "node_modules"
  ]
}
